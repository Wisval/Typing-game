import pygame
import random
import sys

# Define the background colour 
# using RGB color coding. 
background_colour  = (135, 206, 235) 

# Define the dimensions of 
# screen object(width,height) 
screen = pygame.display.set_mode((455, 400)) 

# Set the caption of the screen 
pygame.display.set_caption('Typing_G') 

# Fill the background colour to the screen 
screen.fill(background_colour) 

#bg_image = pygame.image.load("file:///C:/Users/ca822645/Downloads/%E2%80%94Pngtree%E2%80%94cartoon%20colorful%20coral%20under%20seabed_5691694.png")

#INSIDE OF THE GAME LOOP
#screen.blit(bg_image , (0, 0))

# Update the display using flip 
pygame.display.flip() 

# Variable to keep our game loop running 
running = True

# game loop 
while running: 

# for loop through the event queue   
    for event in pygame.event.get(): 

        # Check for QUIT event       
        if event.type == pygame.QUIT: 
            running = False
